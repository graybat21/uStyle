<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 비밀번호 암호화를 위해 필요한 Bean -->	
	<beans:bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" /> 

	<!-- Root Context: defines shared resources visible to all other web components -->
	<http auto-config="true">
		<intercept-url pattern="/admin/item/create**"
			access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/admin/item/update**"
			access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/admin/item/delete**"
			access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/admin/item/index**"
			access="hasRole('ROLE_ADMIN')"/>
		<intercept-url pattern="/admin/item/search**"
			access="hasRole('ROLE_ADMIN')"/>
		<form-login login-page="/admin/masterLogin" login-processing-url="/j_spring_security_check" 
			authentication-failure-url="/admin/masterLogin?login_error=1" default-target-url="/admin.do" />
		<session-management>
			<concurrency-control
				max-sessions="1" error-if-maximum-exceeded="true" />
		</session-management>
		<logout logout-url="/j_spring_security-logout" 
			logout-success-url="/admin/masterLogout" invalidate-session="true" />
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="spring"
					authorities="ROLE_ADMIN" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>